<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B6996D"
    tools:context=".Menu">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btnScan"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:foreground="@drawable/button_protect_purdue"
                android:onClick="btnScanOnClick" />

            <Button
                android:id="@+id/btnMenuToRegister"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:foreground="@drawable/button_reserve"
                android:onClick="btnMenuToRegisterOnClick" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btnReportIssues"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:foreground="@drawable/button_report_issues"
                android:onClick="btnReportIssuesOnClick" />

            <Button
                android:id="@+id/btnStatus"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:foreground="@drawable/button_status"
                android:onClick="btnStatusOnClick" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btnOpenProtectPurdue"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:foreground="@drawable/button_protect_purdue" />

            <Button
                android:id="@+id/btnSignOut"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:foreground="@drawable/button_sign_out" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>